<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.goya0016.tundra" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Goya0016-Tundra</name>
    <description>
       A Canadian Dating app.
    </description>
    <author email="goya0016@algonquinlive.com" href="http://cordova.io">
        Nipun Goyal
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="/res/icons/android/icon57.png"/>

        <splash src="/res/screen/android/splash.png" density="port-mdpi"/>
        <splash src="/res/screen/android/splash-6.png" density="port-hdpi"/>
        <splash src="/res/screen/android/splash-5.png" density="port-xhdpi"/>
        <splash src="/res/screen/android/splash-4.png" density="port-xxhdpi"/>
        <splash src="/res/screen/android/splash-2.png" density="land-xxhdpi"/>

<preference name="AutoHideSplashScreen" value="true" />
<preference name="SplashScreenDelay" value="5000" />

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreenDelay" value="5000" />

    </platform>
</widget>
